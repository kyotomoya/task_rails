<div class="background">
  <div class="reservation-show-area">
    <div class="reservation-show-head">
      <h2>予約したルーム情報</h2>
    </div>
    <div class="reservation-contents">
      <div class="reservation-content">
        <div class="reservation-left">
          <h3>予約した部屋名</h3>
        </div>
        <div class="reservation-right">
          <%= @room.room_name %>
        </div>
      </div>
      <div class="reservation-content">
        <div class="reservation-left">
          <h3>開始日</h3>
        </div>
        <div class="reservation-right">
          <%= @room.start_date.to_s(:datetime_jp) %>
        </div>
      </div>
      <div class="reservation-content">
        <div class="reservation-left">
          <h3>終了日</h3>
        </div>
        <div class="reservation-right">
          <%= @room.end_date.to_s(:datetime_jp) %>
        </div>
      </div>
      <div class="reservation-content">
        <div class="reservation-left">
          <h3>価格</h3>
        </div>
        <div class="reservation-right">
          <p><%= @room.total_price %>円</p>
        </div>
      </div>
    </div>
  </div>
</div>