<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="create-background">
    <div class="create-area">
      <div class="create-contents">
        <div class="create-content create-content-head">
          <h2>新しいアカウントを作成</h2>
        </div>
        <div class="create-content">
          <div class="field">
            <div class="label">
              <%= f.label :name, "必須" %>
            </div>
            <div class="input">
              <%= f.text_field :name, autofocus: true, placeholder: "名前" %>
            </div>
          </div>
        </div>
        <div class="create-content">
          <div class="field">
            <div class="label">
              <%= f.label :email, "必須"%>
            </div>
            <div class="input">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス" %>
            </div>
          </div>
        </div>
        <div class="create-content">
          <div class="field">
            <div class="label">
              <%= f.label :password, "必須"%>
            </div>
            <div class="style-none">
              <% if @minimum_password_length %>
                <%= @minimum_password_length %>
              <% end %>
            </div>
            <div class="input">
              <%= f.password_field :password, autocomplete: "new-password",placeholder: "パスワード(6文字以上)" %>
            </div>
          </div>
        </div>
        <div class="create-content">
          <div class="field">
            <div class="label">
              <%= f.label :password_confirmation, "必須"%>
            </div>
            <div class="input">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード" %>
            </div>
          </div>
        </div>
        <div class="create-content">
          <div class="actions button">
            <%= f.submit "アカウントを作成" %>
          </div>
        </div>
        <div class="login-button">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  
<% end %>
